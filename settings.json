{
    // 相机参数
    "camera":{
        // 曝光时间，默认10000.0000
        "shutter time":5000.0000,
        // 红色白平衡值，默认1.6523
        "Red Balance ratio":1.6523,
        // 绿色白平衡值，默认1.0000
        "Green Balance ratio":1.0000,
        // 蓝色白平衡值，默认1.9414
        "Blue Balance ratio":1.9414,
        // 增益，默认20.00
        "Gain":20.00,
        // 相机编号，默认1
        "id": 1,
        // 触发相关菜蔬
        "trigger":{
            // 触发源: 数值n表示用line n触发，默认2
            "source": 2,
            // 触发方式： 0位下降沿 1位上升沿，默认为1
            "edge": 0
        }
    },
    // 辨识参数
    "detection":{
        // 阈值相关参数
        "thresh":{
            "bin thresh": 180,
            "k_pos": 0.01,
            "k_scratch": 0.001,
            "k_bigpro": 0.001
        },
        // 功能开关
        "switch":{
            // 保存结果图像
            "save img": false,
            // 保存结果到文件
            "save result log": true,
            // 显示所用时间
            "show time": true,
            // 0-检测单张 1-检测A4纸
            "detect each": 1
        },
        // 文件路径
        "file":{
            // 原图路径
            "template directory": "../images/templates/",
            // 拍摄图像保存路径
            "image directory": "../images/test/"
        }
    },
    // 通信参数
    "communication":{
        // 服务器端host
        "client_host":"127.0.0.1",
        // server port
        "server_port":7999,
        // result url
        // "result_url":"/api/Print/addErrorReport",
        // client port
        "client_port":7999
    }
}